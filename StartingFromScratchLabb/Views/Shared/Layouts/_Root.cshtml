@model IWithRootLayout
@{
    Layout = null;
}

<!doctype html>
<html lang="??">
@*TODO: Make lang dynamic*@
<head>
    <meta charset="utf-8" />
    <title>@Model.Layout.Title</title>
    <meta name="description" content="@Model.Layout.Description">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha256-YLGeXaapI0/5IgZopewRJcFXomhRMlYYjugPLSyNjTY=" crossorigin="anonymous" />
    @Html.CanonicalLink()
    @Html.AlternateLinks()
    @Html.RequiredClientResources("Header")
    @Html.RenderEPiServerQuickNavigator()
</head>
<body>
    @Html.FullRefreshPropertiesMetaData()
    <header>
        <div class="sr-only" role="navigation">
            <a href="#main">Hoppa till innehållet</a>
        </div>
        <nav>
            @Model.Layout.CompanyName
        </nav>

    </header>



    <main id="main">
        @RenderBody()
    </main>

    <footer>
        @Model.Layout.FooterText
    </footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.15.0/popper.min.js" integrity="sha256-1XfFQxRfNvDJW3FdZ+xlo2SbodG2+rFArw6XsVzu3bc=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha256-CjSoeELFOcH0/uxWu6mC/Vlrc1AARqbm/jiiImDGV3s=" crossorigin="anonymous"></script>
    @Html.RequiredClientResources("Footer")
</body>
</html>
